<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    //push test
    <TextView
        android:id="@+id/main_text"
        android:text="Welcome to Pixting Hub!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#712c2c"
        android:textSize="28dp"
        android:textStyle="bold|italic"
        />

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sliced_bread_award"
        android:layout_below="@+id/btn_new"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />
    <Button
        android:id="@+id/btn_new"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="New pixt"
        android:layout_alignTop="@+id/btn_gallery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="View Gallery"
        android:layout_below="@+id/main_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp" />

</RelativeLayout>
